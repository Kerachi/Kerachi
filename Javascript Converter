document.write("HexaToChar: "+AsciiToChar(HexaToAscii(hex))+"<br /><br />");
document.write("HexaToChar: "+AsciiToChar(HexaToAscii(hex))+"<br /><br />");

var binary="1011000000001011";
document.write("BinaryToChar: "+BinaryToChar(binary)+"<br /><br />");
document.write("BinaryToAscii: "+BinaryToAscii(binary)+"<br /><br />");
document.write("BinaryToHex: "+AsciiToHex(BinaryToAscii(binary))+"<br /><br />");
document.write("BinaryToHexToAsciiToChar: "+AsciiToChar(HexaToAscii(BinaryToAscii(binary)))+"<br /><br />");

document.write("Hardbit: "+BinaryToChar(hardbit(binary))+"<br /><br />");

var text="solution";
document.write("CharToHax: "+AsciiToHex(BinaryToAscii(binary))+"<br /><br />");

var text2="A place to gather, a place to hide, should be well hidden and plain in sight.Where should you start how to begin, if nothings here except a thin phrase of text and random words, are you still lost does the brain hurts?";
var text2s=SubeveryX(text2,4);
document.write("SubeveryX: "+text2s+"<br /><br />");
